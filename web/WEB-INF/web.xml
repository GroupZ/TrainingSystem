<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>servlets.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>servlets.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CourseReg</servlet-name>
        <servlet-class>servlets.CourseReg</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CourseUpdate</servlet-name>
        <servlet-class>servlets.CourseUpdate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CourseDelete</servlet-name>
        <servlet-class>servlets.CourseDelete</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CourseReg</servlet-name>
        <url-pattern>/CourseReg</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CourseUpdate</servlet-name>
        <url-pattern>/CourseUpdate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CourseDelete</servlet-name>
        <url-pattern>/CourseDelete</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
